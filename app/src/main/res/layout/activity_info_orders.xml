<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoOrdersActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:backgroundTint="@color/Clear"
            android:contentDescription="@string/button_back"
            android:src="@drawable/arrow_back" />

        <TextView
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="65dp"
            android:gravity="center"
            android:text="Информация о заказе"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textFontWeight="600"
            android:textSize="21dp" />

    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/lk_button"
        android:contentDescription="@string/button_done_orders"
        android:text="@string/button_info_orders"
        tools:ignore="DuplicateClickableBoundsCheck"></Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/button_done_orders"
        android:layout_marginTop="300dp"
        android:layout_marginHorizontal="50dp"
        android:text="@string/button_info_orders"
        android:background="@drawable/lk_button"
        ></Button>




</RelativeLayout>