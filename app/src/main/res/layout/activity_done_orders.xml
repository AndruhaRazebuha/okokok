<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoneOrdersActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"


        android:orientation="horizontal">

        <EditText
            android:id="@+id/searchOrders"

            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="31dp"
            android:background="@drawable/input_search"

            android:drawableRight="@drawable/magnifying_glass_9_svgrepo_com"
            android:inputType="text"
            android:paddingTop="10dp"
            android:paddingHorizontal="10dp"
            android:hint="@string/input_searc"


            android:paddingRight="10dp"
            android:paddingBottom="10dp"

            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:textSize="20sp" />




    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/button_done_orders"
        android:layout_marginTop="200dp"
        android:layout_marginHorizontal="50dp"
        android:text="@string/button_done_orders"
        android:background="@drawable/lk_button"
        ></Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/button_order"
        android:layout_marginTop="300dp"
        android:layout_marginHorizontal="50dp"
        android:text="@string/button_done_orders"
        android:background="@drawable/lk_button"
        ></Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/button_done_orders"
        android:layout_marginTop="400dp"
        android:layout_marginHorizontal="50dp"
        android:text="@string/button_done_orders"
        android:background="@drawable/lk_button"
        ></Button>

</RelativeLayout>